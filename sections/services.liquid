<section id="services-section">
  
<style>
   #services-section{
      position: relative;
      padding-top: 80px;
      padding-bottom: 100px;
      overflow: hidden;  	
   }

   #services-section:before{
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background-image: url("https://cdn.shopify.com/s/files/1/0569/9397/2379/files/bg-services.png?v=1622135089") ;
      opacity: 0.2;
      z-index: -1;
   }

   #services-section .title-section{
      position: relative;

   }

   #services-section .triangulo {
      width: 0; 
      height: 0; 
      border-left: 30px solid #bd970c;
      border-top: 15px solid transparent;
      border-bottom: 15px solid transparent; 
  }

  #services-section .triangulo-2 {
      width: 0; 
      height: 0; 
      border-left: 30px solid #383838;
      border-top: 15px solid transparent;
      border-bottom: 15px solid transparent; 
  }
  #services-section .triangulo-3 {
      width: 0; 
      height: 0; 
      border-left: 30px solid #aaaaaa;
      border-top: 15px solid transparent;
      border-bottom: 15px solid transparent; 
  }

  #services-section h2 {
      color: #383838;
      font-size: 36px;
      margin-left: 100px;   
  }


  #services-section p{
      color: #bd970c;
      font-size: 40px;
      padding-left: 10px;
      font-weight: 500px;
      margin-top: -20px;

  }

  #services-section a:hover{
      text-decoration:none!important;

  }
  
  @media (min-width: 1024px) {

  #services-section .m-m {
    margin-top: -100px!important;

  }

  }

  #services-section .card-container {    
    width: 90%;
    height: 300px;
    margin: 30px auto;  
    position: relative;
    overflow: hidden;
    border-radius: 15px;  
  }

  #services-section .card-container .title{    
    background: #383838;
    position: absolute;
    width: 100%;
    height: 60px;
    display: flex;
    align-items: center;
    top: 0%;
    border-top-left-radius: 25px;
    border-bottom-left-radius: 25px;
    color: #fff;
    padding-left: 40px;
    font-size: 22px;
  }

  #services-section .card-container .triangulo-card {
       width: 0; 
       height: 0; 
       border-right: 180px solid transparent;
       border-top: 180px solid transparent;
       border-left: 180px solid transparent;
       border-bottom: 180px solid #bd970c;
       position: absolute;
       right: -10px;
       top: -30px; 
       transform: rotate(-90deg);
  }

  #services-section .card-container .img-service {
       width: 166px; 
       height: 166px; 
       position: absolute;
       top: 10%;
       right: 10%;
       border-radius: 50%;
       border: solid 5px #fff;     
  }
  
  #services-section .card-container .content-service {
       width: 180px; 
       height: 200px; 
       position: absolute;
       top: 25%;
       left: 5%;
       font-weight: 500;
       color: #706e6e;         
  }

  #services-section .card-container .btn-more{
      position: absolute;
      bottom: -25px;
      right: 30%;
      font-size: 20px;   
  }

  #services-section .card-container .btn-more a{	
      font-size: 20px;
      color: #bd970c;   
  }



  #services-section .card-container .btn-more i{
    margin-left: 5px;
    color: #bd970c;
    -webkit-animation: animate-it 3s ease infinite;
    animation: animate-it 3s ease infinite;
    transition: 0.5s;
  }


  /* vertical animation */
  @-webkit-keyframes animate-it {
    0%, 60%, 80%, 100% {
      -webkit-transform: translateX(0);
    }
    20% {
      -webkit-transform: translateX(-5px);
    }
    40% {
      -webkit-transform: translateX(20px);
    }
  }
  @keyframes animate-it {
    0%, 60%, 80%, 100% {
      -webkit-transform: translateX(0);
    }
    20% {
      -webkit-transform: translateX(-5px);
    }
    40% {
      -webkit-transform: translateX(20px);
    }
  }


  #services-section .card-container .btn-more a:hover i {
    color: #383838;
    margin-right: 6px;
    font-weight: 700;
    transition: 0.6s;
  }

  @media (max-width: 468px) {

  #services-section .card-container {    
    width: 100%;
    height: 300px;  
  }

  #services-section .card-container .img-service {
       width: 120px; 
       height: 120px;     
       top: 25%;
  }

  #services-section .card-container .triangulo-card {
       right: -33px;
   }

  #services-section .card-container .content-service {
       width: 130px; 
       height: auto; 
       position: absolute;
       top: 25%;
       left: 5%;
       font-size: 12px;            
  }
  }

  @media (min-width: 469px) and (max-width: 500px){
    #services-section .card-container .img-service {
         width: 120px; 
         height: 120px;     
         top: 25%;
    }
  }
  
  #services-section .btn-2 a {
      background: #fff;
      padding: 7px 35px;
      border-radius: 26px;
      color: #bd980c;
      border: 3px solid #bd980c;
      transition: 0.6s;
  }

  #services-section .btn-2 a:hover{
      background: #bd980c;
      color: #fff;
      transition: 0.6s;
  }
</style>
    
