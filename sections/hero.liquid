 <div id="hero">
   
   <style>
    #hero{
     position: relative;
     display: flex;
     flex-direction: column;
     align-items: left;
     justify-content: center;
     text-align: bottom;
     color: #fff;
      height: 100vh;
      min-height: 25rem;
      width: 100%;
      overflow: hidden;

    }

    #hero::before{
     content: '';
     background: rgba(0, 0, 0, 0.6); /*OVERLAY*/
      position: absolute;
      height: 100%;
      width: 100%;
    }

    #hero h1{
      font-weight: 500;
      font-size: 2.5rem;
      margin-right: 20px;
    }

    #hero span{
      font-weight: 500;
      font-size: 1.5rem; 
      color: #f0bf0d;

    }


    #hero .video-container{
      position: absolute;
      top: 0;
      left: 0;
      overflow: hidden;
      width: 100%;
      height: 100%;
      z-index: -1;
    }



    #hero .video-container video {
      min-height: 100%;
      min-width: 100%;
      object-fit: cover;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    #hero .triangle-1:after {
        position: absolute;
        top: -14%;
        right: -15%;
        height: 750px;
        width: 750px;
        content: '';
        background: #f0bf0d;
        opacity: 0.3;
        z-index: 0;
        border-radius: 10%;
        transform: rotate(-40deg); 
    }

    #hero .triangle-2:after {
        position: absolute;
        top: -14%;
        right: -20%;
        height: 750px;
        width: 750px;
        content: '';
        background: #f0bf0d;
        opacity: 0.3;
        z-index: 0;
        border-radius: 10%;
        transform: rotate(-40deg); 
    }

    #hero .triangle-3:after {
        position: absolute;
        top: -14%;
        right: -27%;
        height: 750px;
        width: 750px;
        content: '';
        background: #fff;
        opacity: 0.3;
        z-index: 0;
        border-radius: 10%;
        transform: rotate(-40deg); 
    }

    #hero .triangle-4:after {
        position: absolute;
        top: -14%;
        right: -34%;
        height: 750px;
        width: 750px;
        content: '';
        background: #fff;
        opacity: 0.3;
        z-index: 0;
        border-radius: 10%;
        transform: rotate(-40deg); 
    }

    #hero .icons-header{
      position: absolute;
      bottom: 65px;
      left: 150px;
      display: flex;
      align-items: center; 
      width: 100%;


    }

    #hero .icons-header .linea {
        height: 1px;
        width: 5%;
        background: #bd980c;
        margin-left: 20px;
        margin-right: 20px;
    }

    #hero .icons-header h3 {
        font-size: 20px;
    }

    #hero .icons-header i {
        margin-right: 20px;
        font-size: 20px;
        color: #fff;
        transition: 0.6s;
    }

    #hero .icons-header i:hover {   
        color: #bd980c;
        transition: 0.6s;
    }
     
    #hero button{
            background-color: #bd970c;
            color: #ffffff;
            border: 3px solid #bd970c;
    }
     
    #hero button h4{
            margin:0!important;
    }
     
    #hero button:hover{  
            background-color: #fff;   
            color: #bd970c; 
            border: 3px solid #bd970c;
    }

    #hero h1{
      margin-top: -70px;
      font-weight: 500;
      font-size: 2.5rem;
      margin-right: 0px;
      text-align: center;
    }

    #hero span{
      font-weight: 500;
      font-size: 1.5rem; 
      color: #f0bf0d;
      text-align: center;
      margin-right: 0px;
    }

    #hero .triangle-1:after {    
        top: 60%;
        right: -25%;
        height: 350px;
        width: 350px;
    }

    #hero .triangle-2:after {    
        top: 60%;
        right: -35%;
        width: 350px;
        height: 350px;    
    }

    #hero .triangle-3:after {   
        top: 60%;
        right: -45%;
        width: 350px;
        height: 350px;   
    }

    #hero .triangle-4:after {   
        top: 60%;
        right: -55%;
        width: 350px;
        height: 350px;    
    }

    #hero .icons-header{
      position: absolute;
      bottom: 5px;
      left: 15px;
      display: flex;
      align-items: center; 
      width: 100%;

    }
     
    @media (max-width: 468px) {
    #hero{ 
     height: 130vh; 
    }

    #hero .triangle-1:after {    
        top: 60%;
